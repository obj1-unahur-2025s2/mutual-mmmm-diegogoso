  const viaje2 = new Ciudad( idiomas = "Espaniol", atracciones = 4)
  const viaje3 = new CiudadTropical( idiomas = "Portugues", atracciones = 4)
  const caminar = new SalidaDeTrekking( idiomas = "Italiano", kilometros = 100, diasDeSol = 130)
test "test Viaje de Ciudad"{
  assert.equals(2, viaje2.diasDeViaje())
  assert.notThat(viaje2.implicaEsfuerzo())
